@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Proudct Create";
}

<div class="container tm-mt-big tm-mb-big">
	<div class="row">
		<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
			<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
				<div class="row">
					<div class="col-12">
						<h2 class="tm-block-title d-inline-block">Add Order Detail</h2>
					</div>
				</div>
				<div class="row tm-edit-product-row">
					<div class="col-xl-6 col-lg-6 col-md-12">
						<form action="../createdetail" class="tm-edit-product-form">
							<div class="form-group mb-3">
								<input id="OrderId"
									   name="OrderId"
									   type="text"
									   value="@ViewBag.orderId"
									   hidden
									   class="form-control validate"
									   required />
								<label for="ProductId">Product</label>
								<select class="custom-select tm-select-accounts"
										id="ProductId" name="ProductId">
									@foreach (var pro in ViewBag.products)
									{
										<option value="@pro.Id">@pro.Name</option>
									}
								</select>
							</div>
							<div class="form-group mb-3 col-xs-12 col-sm-6">
								<label for="Quantity">
									Quantity
								</label>
								<input id="Quantity"
									   name="Quantity"
									   type="text"
									   class="form-control validate"
									   required />
							</div>
							<div class="col-12">
								<button type="submit" class="btn btn-primary btn-block text-uppercase">Add Now</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="js/jquery-3.3.1.min.js"></script>
