@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col">
            <p class="text-white mt-5 mb-5">Welcome back, <b>Admin</b></p>
        </div>
    </div>
    <!-- row -->
    <div class="row tm-content-row">
        <div class="col-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                <h1 class="tm-block-title">User List</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID.</th>
                            <th scope="col">Email</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Contact Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Active</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.users)
                        {
                            <tr>
                                <th scope="row"><b>#@item.Id</b></th>
                                <td class="tm-product-name"><a href="/Admin/EditAccount/@item.Id">@item.Email</a></td>
                                <td><b>@item.FirstName</b></td>
                                <td><b>@item.LastName</b></td>
                                <td><b>@item.ContactName</b></td>
                                <td>@item.Phone</td>
                                @if (item.Active == false)
                                {
                                    <td>
                                        <div class="tm-status-circle cancelled">
                                        </div>Disable
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <div class="tm-status-circle moving">
                                        </div>Enable
                                    </td>
                                }
                                <td>
                                    <a href="/Admin/DeleteUser/@item.Id" class="tm-user-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <a href="/Admin/AddAccountForm"
       class="btn btn-primary btn-block text-uppercase mb-3">Add new Account</a>
</div>
