@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Proudct Create";
}

<div class="container tm-mt-big tm-mb-big">
	<div class="row">
		<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
			<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
				<div class="row">
					<div class="col-12">
						<h2 class="tm-block-title d-inline-block">Add Order</h2>
					</div>
				</div>
				<div class="row tm-edit-product-row">
					<div class="col-xl-6 col-lg-6 col-md-12">
						<form action="createorder" class="tm-edit-product-form">
							<div class="form-group mb-3">
								<label for="UserId">User</label>
								<select class="custom-select tm-select-accounts"
										id="UserId" name="UserId">
									@foreach (var user in ViewBag.users)
									{
										<option value="@user.Id">@user.ContactName</option>
									}
								</select>
							</div>
							<div class="form-group mb-3">
								<label for="OrderDate">Order Date</label>
								<input class="form-control validate"
									   name="OrderDate"
									   type="date"
									   required />
							</div>
							<div class="form-group mb-3">
								<label for="RequiredDate">Required Date</label>
								<input class="form-control validate"
									   name="RequiredDate"
									   type="date"
									   required />
							</div>
							<div class="form-group mb-3">
								<label for="ShippedDate">Shipped Date</label>
								<input class="form-control validate"
									   name="ShippedDate"
									   type="date"
									   required />
							</div>
							<div class="form-group mb-3 col-xs-12 col-sm-6">
								<label for="Freight">
									Freight
								</label>
								<input id="Freight"
									   name="Freight"
									   type="text"
									   class="form-control validate"
									   required />
							</div>
							<div class="form-group mb-3 col-xs-12 col-sm-6">
								<label for="ShipAddress">
									Ship Address
								</label>
								<input id="ShipAddress"
									   name="ShipAddress"
									   type="text"
									   class="form-control validate"
									   required />
							</div>
							<div class="form-group mb-3 col-xs-12 col-sm-6">
								<label for="Status">
									Status
								</label>
								<input id="Status"
									   name="Status"
									   type="checkbox"
									   value="true"
									   checked="checked"
									   class="form-control validate"/>
								<input id="isCart"
									   name="isCart"
									   type="checkbox"
									   hidden
									   checked="checked"
									   value="False"
									   class="form-control validate"/>
							</div>
							<div class="col-12">
								<button type="submit" class="btn btn-primary btn-block text-uppercase">Add Now</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="js/jquery-3.3.1.min.js"></script>
